<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>

        <variable
                name="viewModel"
                type="iclaude.festivaleconomia2019.ui.sessions.SessionListViewModel"/>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:behavior_hideable="true" android:background="@color/surfaceColor">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_normal"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="?android:textColorPrimary"
                android:text="@string/filters"
                app:filterSet="@{viewModel.filterSelected}"
                app:sessionsFiltered="@{viewModel.sessionsFilteredObs}"
                app:layout_constraintTop_toTopOf="@+id/bReset" app:layout_constraintBottom_toBottomOf="@+id/bReset"/>

        <com.google.android.material.button.MaterialButton
                app:filterSet2="@{viewModel.filterSelected}"
                app:sessionsFiltered2="@{viewModel.sessionsFilteredObs}"
                android:text="@string/filter_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/bReset" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" android:visibility="invisible"/>
        <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chipStarred" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bReset" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" android:text="@string/starred_events"
                app:filterStarred="@{viewModel.filterSelected}"/>
        <TextView
                android:text="@string/tags_topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/chipStarred"/>

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgTopics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal" tools:layout_editor_absoluteX="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:viewModel="@{viewModel}"
                app:tags="@{viewModel.tagsLive}"/>

        <TextView
                android:text="@string/tags_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" app:layout_constraintTop_toBottomOf="@+id/cgTopics"
                android:layout_marginTop="24dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"/>

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:viewModel="@{viewModel}"
                app:tags="@{viewModel.tagsLive}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>