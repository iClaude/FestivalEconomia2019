<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="viewModelDer"
                type="iclaude.festivaleconomia2019.ui.sessions.SessionListViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="8dp"
            android:background="@drawable/filters_sheet_background"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:behavior_hideable="true"
            android:paddingBottom="@dimen/margin_small"
            app:behavior_peekHeight="0dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_normal"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="?android:textColorPrimary"
                android:text="@string/filters"
                app:filterSet="@{viewModelDer.filterSelected}"
                app:sessionsFiltered="@{viewModelDer.sessionsFilteredObs}"
                app:layout_constraintBaseline_toBaselineOf="@+id/bReset"/>

        <com.google.android.material.button.MaterialButton
                app:filterSet2="@{viewModelDer.filterSelected}"
                app:sessionsFiltered2="@{viewModelDer.sessionsFilteredObs}"
                android:text="@string/filter_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/bReset" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" android:visibility="visible"/>

        <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/csl_filter_chip_starred_foreground"
                app:chipBackgroundColor="@color/csl_filter_chip_starred_background"
                app:closeIconTint="@color/csl_filter_chip_starred_foreground"
                android:id="@+id/chipStarred"
                app:layout_constraintTop_toBottomOf="@+id/bReset" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" android:text="@string/starred_events"
                app:filterStarred="@{viewModelDer.filterSelected}"
                android:layout_marginTop="4dp"/>

        <TextView
                android:text="@string/tags_topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/chipStarred"/>

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgTopics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:viewModel="@{viewModelDer}"
                app:tags="@{viewModelDer.tagsLive}"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_normal"/>

        <TextView
                android:text="@string/tags_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal" app:layout_constraintTop_toBottomOf="@+id/cgTopics"
                android:layout_marginTop="24dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"/>

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:viewModel="@{viewModelDer}"
                app:tags="@{viewModelDer.tagsLive}" tools:layout_editor_absoluteX="16dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_normal"/>
        <ImageButton
                android:layout_width="@dimen/a11y_min_touch_target"
                android:layout_height="@dimen/a11y_min_touch_target" app:srcCompat="@drawable/ic_chevron_collapse"
                android:id="@+id/ibCollapse" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_small"
                app:layout_constraintTop_toTopOf="@+id/bReset"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/content_description"
                android:scaleType="center"
                android:tint="@color/dark_gray"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>