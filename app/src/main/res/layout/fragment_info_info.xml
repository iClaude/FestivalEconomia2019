                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/ivHistory"
                android:layout_marginBottom="@dimen/margin_small"
                app:layout_constraintStart_toStartOf="@id/ivHistory"
                android:layout_marginStart="@dimen/margin_normal"
                android:text="@string/info_type_history"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:fontFamily="@font/open_sans"/>

        <TextView
                android:id="@+id/tvHistoryDesc"
                android:text="@string/info_type_history_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ivHistory"
                android:layout_marginTop="@dimen/margin_small"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_normal"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_normal"/>

        <ImageView
                android:id="@+id/ivRai"
                android:contentDescription="@string/content_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintTop_toBottomOf="@id/tvHistoryDesc"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
                android:id="@+id/ivRaiSquirrel"
                android:contentDescription="@string/content_description"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintEnd_toEndOf="@id/ivRai"
                app:layout_constraintTop_toTopOf="@id/ivRai"
