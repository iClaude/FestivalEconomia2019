<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
                name="sessionData"
                type="iclaude.festivaleconomia2019.ui.details.session.SessionInfo"/>
        <variable
                name="viewModel"
                type="iclaude.festivaleconomia2019.ui.details.session.SessionInfoViewModel"/>
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.details.session.SessionInfoFragment"
            android:fitsSystemWindows="true"
            android:id="@+id/coordinatorLayout">

        <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
                                                         android:layout_height="@dimen/session_info_appbar_height"
                                                         android:fitsSystemWindows="true"
                                                         android:background="@color/surfaceColor">

            <com.google.android.material.appbar.CollapsingToolbarLayout android:layout_width="match_parent"
                                                                        android:layout_height="match_parent"
                                                                        app:layout_scrollFlags="scroll"
                                                                        android:fitsSystemWindows="true"
                                                                        android:foreground="?selectableItemBackground"
                                                                        android:onClick="@{() -> viewModel.startYoutubeVideo()}">
                <ImageView
                        android:id="@+id/ivSessionImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="parallax"
                        android:contentDescription="@string/content_description"
                        app:sessionImage="@{sessionData.photoUrl}"
                        android:background="?selectableItemBackground"/>

                <ImageView android:layout_width="64dp"
                           android:layout_height="64dp"
                           android:src="@drawable/ic_play"
                           android:layout_gravity="center"
                           android:contentDescription="@string/content_description"
                           android:visibility="@{sessionData.youtubeUrl == null ? View.GONE : View.VISIBLE}"/>

                <ImageButton
                        android:id="@+id/up"
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:layout_gravity="start|top"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription="@string/content_description"
                        app:srcCompat="@drawable/ic_arrow_back"
                        android:onClick="@{() -> viewModel.navigateBack()}"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <include android:id="@+id/content"
                     layout="@layout/fragment_session_info_content"
                     bind:sessionDataDer="@{sessionData}"
                     bind:viewModelDer="@{viewModel}"/>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>