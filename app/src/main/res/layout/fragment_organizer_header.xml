<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
                name="organizerDataDer"
                type="iclaude.festivaleconomia2019.ui.details.organizer.OrganizerInfo"/>
        <variable
                name="viewModelDer"
                type="iclaude.festivaleconomia2019.ui.details.organizer.OrganizerViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.5">

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/margin_normal"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_title_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.65"/>

        <ImageView
                android:id="@+id/ivAppBarImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/content_description"
                app:sessionImage="@{null}"/>

        <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/speaker_large_headshot_size"
                android:layout_height="@dimen/speaker_large_headshot_size"
                android:layout_marginTop="40dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/guideline_title_end"
                app:layout_constraintTop_toTopOf="@id/ivAppBarImage"
                app:speakerImage="@{organizerDataDer}" android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:contentDescription="TODO"/>


        <TextView
                android:id="@+id/tvName"
                style="@style/SessionDetailTitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="72dp"
                android:layout_marginBottom="8dp"
                android:text="@{organizerDataDer.name}"
                app:layout_constraintBottom_toBottomOf="@id/ivAppBarImage"
                app:layout_constraintEnd_toEndOf="@id/guideline_title_end"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toTopOf="@id/ivAppBarImage"
                tools:text="George Soros"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>