<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Theme colors. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/onErrorColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/onBackgroundColor</item>

        <item name="android:statusBarColor">@color/statusBarColor</item>

        <!-- Widget global styles. -->
        <item name="bottomNavigationStyle">@style/App.BottomNavigationView</item>
    </style>

    <!-- BottomNavigationView style. -->
    <style name="App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextAppearanceActive">@style/App.BottomNavigationView.Text</item>
        <item name="itemTextAppearanceInactive">@style/App.BottomNavigationView.Text</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <style name="App.BottomNavigationView.Text"
           parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/bottom_nav_item</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TabLayout style. -->
    <style name="App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/App.TabLayout.Text</item>
    </style>

    <style name="App.TabLayout.Text" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Appbar style. -->
    <style name="App.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">@color/statusBarColor</item>
        <item name="android:elevation">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="App.AppBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <!-- BottomSheet style. -->
    <style name="App.BottomSheet.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/onSurfaceColor</item>
    </style>

</resources>
