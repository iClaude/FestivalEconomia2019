<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <!-- BottomNavigationView style. -->
    <style name="MyBottomNav" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/MyBottomNavTextActive</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="MyBottomNavTextActive"
           parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/bottom_nav_item</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Appbar style. -->
    <style name="MyAppBarStyle" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">@color/statusBarColor</item>
        <item name="android:elevation">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Toolbar title style. -->
    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="BottomSheetTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/collapsing_section</item>
    </style>

</resources>
