<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Different colors for different themes -->
    <!-- Generic colors -->
    <attr name="myLinkColor" format="reference"/>
    <attr name="chipTextColor" format="reference"/>
    <attr name="myIconTint" format="reference"/>
    <!-- Map screen -->
    <attr name="mapFragmentAppbarColor" format="reference"/>
    <attr name="mapDirectionsChipIconTint" format="reference"/>
    <attr name="mapMarkerInfoWindowBackgroundColor" format="reference"/>
    <attr name="mapMarkerInfoWindowYesEventsColor" format="reference"/>
    <attr name="mapMarkerInfoWindowNoEventsColor" format="reference"/>
    <!-- Session info screen -->
    <attr name="cibFavoritesColor" format="reference"/>
    <attr name="sessionInfoScrim" format="reference"/>


    <!-- Card used to display info about each type of event -->
    <declare-styleable name="EventTypeCard">
        <attr name="eventImageSrc" format="reference"/>
        <attr name="eventTitle" format="reference"/>
        <attr name="eventDescription" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TimeHeader">
        <attr name="android:width"/>
        <attr name="android:paddingTop"/>
        <attr name="android:textColor"/>
        <attr name="android:fontFamily"/>
        <attr name="hourTextSize" format="dimension"/>
        <attr name="hourMinTextSize" format="dimension"/>
        <attr name="meridiemTextSize" format="dimension"/>
    </declare-styleable>

    <attr name="eventFilterViewStyle" format="reference"/>

    <declare-styleable name="EventFilterView">
        <attr name="android:checked"/>
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="android:color"/>
        <attr name="android:padding"/>
        <attr name="android:strokeColor"/>
        <attr name="outlineWidth" format="dimension"/>
        <attr name="clearIcon" format="reference"/>
        <attr name="foreground" format="reference"/>
        <attr name="showIcons" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="HeaderGridDrawable">
        <attr name="android:color"/>
        <attr name="gridSize" format="dimension"/>
        <attr name="gridStrokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TransitionArcMotion">
        <attr name="arcRadius" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CollapsibleCard">
        <attr name="cardTitle" format="string"/>
        <attr name="cardDescription" format="string"/>
    </declare-styleable>

</resources>